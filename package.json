    "url": "https://viccrubs.me"
  },
  "homepage": "https://github.com/viccrubs/restate",
  "dependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.17",
    "@types/jest": "^24.0.0",
    "@types/react": ">=16.8.0",
    "@types/react-test-renderer": "^16.8.0",
    "coveralls": "^3.0.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "jest": "^24.1.0",
    "react-dom": "^16.8.1",
    "rollup": "latest",
    "rollup-plugin-babel-minify": "latest",
    "rollup-plugin-commonjs": "latest",
    "rollup-plugin-livereload": "latest",
